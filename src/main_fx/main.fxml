<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="804.0" prefWidth="1225.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main_fx.Controller">
    <TableView fx:id="tbview" blendMode="DARKEN" fixedCellSize="55.0" layoutY="360.0" pickOnBounds="false"
               prefHeight="444.0" prefWidth="1225.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="360.0">
      <columns>
          <TableColumn fx:id="index_column" editable="false" maxWidth="400.0" prefWidth="34.0"
                       style="-fx-alignment: CENTER;" text="#"/>
          <TableColumn fx:id="isbn_column" editable="false" maxWidth="1200.0" prefWidth="98.0"
                       style="-fx-alignment: CENTER;" text="ISBN"/>
          <TableColumn fx:id="title_column" editable="false" maxWidth="4300.0" minWidth="0.0" prefWidth="309.0"
                       style="-fx-alignment: CENTER;" text="Title"/>
          <TableColumn fx:id="author_column" editable="false" maxWidth="4500.0" minWidth="0.0" prefWidth="609.0"
                       style="-fx-alignment: CENTER;" text="Author"/>
          <TableColumn fx:id="category_column" maxWidth="4000.0" prefWidth="330.0" style="-fx-alignment: CENTER;"
                       text="Category"/>
          <TableColumn fx:id="pdate_column" editable="false" maxWidth="1400.0" prefWidth="149.0"
                       style="-fx-alignment: CENTER;" text="Published Date"/>
          <TableColumn fx:id="quantity_column" editable="false" maxWidth="800.0" prefWidth="95.0"
                       style="-fx-alignment: CENTER;" text="Quantity"/>
          <TableColumn fx:id="bColumn" maxWidth="1000.0" prefWidth="330.0" style="-fx-alignment: CENTER;"
                       text="Add1"/>
      </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox layoutX="200.0" layoutY="292.0" prefHeight="46.0" prefWidth="1225.0" spacing="100.0"
          AnchorPane.bottomAnchor="466.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0"
          AnchorPane.topAnchor="292.0">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <Button fx:id="addButton" mnemonicParsing="false" onMousePressed="#addBook" prefHeight="46.0"
                prefWidth="287.0" text="Add a book">
            <font>
                <Font name="Candara" size="24.0"/>
            </font>
            <HBox.margin>
                <Insets left="50.0" right="50.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="deleteButton" mnemonicParsing="false" onMousePressed="#deleteBook" prefHeight="46.0"
                prefWidth="282.0" text="Delete a book">
            <font>
                <Font name="Candara" size="24.0"/>
            </font>
        </Button>
    </HBox>
</AnchorPane>
